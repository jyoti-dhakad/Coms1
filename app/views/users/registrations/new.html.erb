<section class="vh-100 d-block">
  <div class="container-fluid">
    <div class="row">
      <!-- Form Column -->
      <div class="col-lg-12 d-flex align-items-center">
        <div class="card" style="border-radius: 15px; width: 100%;">
          <div class="card-body p-5">
            <div class="row">
              <!-- Image Column -->
              <div class="col-lg-6" style="height: auto;">
                <div class="d-flex justify-content-center align-items-center h-100">
                <%= image_tag "exam1.jpg", class: "img-fluid", alt: "Image", style: "width: auto; height: 60%;" %>
                </div>
              </div>
              <!-- Form Column -->
              <div class="col-lg-6">
                <h2 class="text-uppercase text-center mb-5">Sign Up</h2>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
                  <%= render "users/shared/error_messages", resource: resource %>

                  <div class="mb-4">
                    <%= f.label :profile_image, class: "form-label" %>
                    <%= f.file_field :profile_image, class: "form-control form-control-lg", accept: "image/*" %>
                  </div>

                  <div class="mb-4">
                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control form-control-lg", placeholder: "First Name" %>
                  </div>

                  <div class="mb-4">
                    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control form-control-lg", placeholder: "Last Name" %>
                  </div>

                  <div class="mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email" %>
                  </div>

                  <div class="mb-4">
                    <%= f.text_field :language_known, autofocus: true, autocomplete: "language known", class: "form-control form-control-lg", placeholder: "Language Known" %>
                  </div>

                  <div class="mb-4">
                    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control form-control-lg", placeholder: "Phone Number" %>
                  </div>

                  <div class="mb-4">
                    <%= f.text_field :gender, autofocus: true, autocomplete: "gender", class: "form-control form-control-lg", placeholder: "Gender" %>
                  </div>
                  
                  <div class="mb-4">
                    <%= f.text_field :city, autofocus: true, autocomplete: "city", class: "form-control form-control-lg", placeholder: "City" %>
                  </div>

                  <div class="mb-4">
                    <%= f.text_field :state, autofocus: true, autocomplete: "state", class: "form-control form-control-lg", placeholder: "State" %>
                  </div>

                  <div class="mb-4">
                    <%= f.text_field :country, autofocus: true, autocomplete: "country", class: "form-control form-control-lg", placeholder: "Country" %>
                  </div>

                  <div class="mb-4">
                    <%= f.text_field :pincode, autofocus: true, autocomplete: "pincode", class: "form-control form-control-lg", placeholder: "Pincode" %>
                  </div>

                  <div class="mb-4">
                    <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, { class: "form-select form-control-lg" } %>
                  </div>

                  <div class="mb-4">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Password" %>
                  </div>

                  <div class="mb-4">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Confirm Password" %>
                  </div>

                  <div class="mb-4 text-center">
                    <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
                  </div>
                <% end %>

               <%= render "users/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
